#!/bin/bash

# kurbeScript - Set up and verify a local Kubernetes cluster with Minikube

# Exit on any error
set -e

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube >/dev/null 2>&1; then
  echo "âŒ Minikube is not installed. Please install it first: https://minikube.sigs.k8s.io/"
  exit 1
fi

echo "ğŸš€ Starting Minikube cluster..."
minikube start

echo "âœ… Minikube cluster started."

echo "ğŸ“¡ Verifying cluster info..."
kubectl cluster-info

echo "ğŸ“¦ Listing available pods..."
kubectl get pods --all-namespaces

echo "âœ… Cluster setup and verification complete!"
